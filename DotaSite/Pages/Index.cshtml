@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<div>
    <table class="table table-striped table-hover table-bordered text-center col-md-6">
        @foreach (var playerHero in Model.PlayerHeros)
        {
            <tr>
                <th>Hero Name</th>
                <th>Player Name</th>
                <th>Hero Roles</th>

            </tr>
            <tr>
                <td>@playerHero.Hero.LocalizedName</td>
                <td>@playerHero.Player.Name</td>
                <td>
                    @for (int i = 0; i < playerHero.Hero.Roles.Length; i++)
                    {
                        @playerHero.Hero.Roles[i]
                        <br />

                    }
                </td>
            </tr>
        }
    </table>


</div>