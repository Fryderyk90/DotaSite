@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<div>
    <table class="table table-striped table-hover text-center">
        @foreach (var playerHero in Model.PlayerHeros)
        {
        <tr>
            <th>Hero Name</th>
            <th>Player Name</th>
        
        </tr>
        <tr>
            <td>@playerHero.Hero.LocalizedName</td>
            <td>@playerHero.Player.Name</td>
            @for (int i = 0; i < playerHero.Hero.Roles.Length; i++)
            {
                <td>@playerHero.Hero.Roles[i]</td>
            }

        </tr>
        }
    </table>


</div>