@page
@using Dota.Core.Models
@model DotaSite.Pages.Teams.AllTeams

@{
    
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
<div>
       <div>
           @foreach (var roster in Model.DotaTeams)
           {
           <div class="card-body col-sm-6">
               <div class="card-body">
                   <div class="card-header">
                       <h3 id="teamname">
                           
                           @roster.Team.Name
                           <span id="teamheader">

                           </span>
                           <span>
                               @if (roster.Team.LogoUrl == null)
                               {
                                   <img src="img/image-not-found.png">
                               }
                               <img src="@roster.Team.LogoUrl" width="100px;" height="100px;"/>
                           </span>
                       </h3>
                     
                      
                       <p>@roster.Player.Personaname</p>
                       <img src="@roster.Player.Avatar" />
                       <p></p>
                       <p></p>
                       <p></p>
                       <p></p>
                   </div>
               </div>
           </div>
               
           }
       </div> 
</div>
</body>
</html>